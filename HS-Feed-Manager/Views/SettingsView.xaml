<UserControl
    x:Class="HS_Feed_Manager.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Expander
            Grid.Row="0"
            Margin="5"
            mah:ControlsHelper.HeaderFontSize="20"
            BorderBrush="Transparent"
            Header="Local Path Settings"
            IsExpanded="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource AccentColorBrush}"
                            Text="File Endings" />
                        <TextBox
                            MinWidth="400"
                            Margin="0,5,0,5"
                            mah:TextBoxHelper.Watermark="Watermark"
                            Text="{Binding LocalPath1}" />
                    </StackPanel>
                </Grid>
                <Rectangle
                    Grid.Row="1"
                    Height="2"
                    Margin="0,5,0,5"
                    Fill="White" />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock Foreground="{DynamicResource AccentColorBrush}" Text="Local Path 1" />
                        <TextBox
                            MinWidth="200"
                            Margin="0,5,0,0"
                            mah:TextBoxHelper.Watermark="Watermark"
                            Text="{Binding LocalPath1}" />
                    </StackPanel>
                    <Rectangle
                        Grid.Column="1"
                        Width="2"
                        Fill="White" />
                    <StackPanel
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock Foreground="{DynamicResource AccentColorBrush}" Text="Local Path 2" />
                        <TextBox
                            Width="200"
                            Margin="0,5,0,0"
                            mah:TextBoxHelper.Watermark="Watermark"
                            Text="{Binding LocalPath2}" />
                    </StackPanel>
                    <Rectangle
                        Grid.Column="3"
                        Width="2"
                        Fill="White" />
                    <StackPanel
                        Grid.Column="4"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock Foreground="{DynamicResource AccentColorBrush}" Text="Local Path 3" />
                        <TextBox
                            Width="200"
                            Margin="0,5,0,0"
                            mah:TextBoxHelper.Watermark="Watermark"
                            Text="{Binding LocalPath3}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Expander>
        <Expander
            Grid.Row="1"
            Margin="5"
            mah:ControlsHelper.HeaderFontSize="20"
            BorderBrush="Transparent"
            Header="Feed Link and Regex Settings"
            IsExpanded="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource AccentColorBrush}"
                            Text="Feed Link" />
                        <TextBox
                            MinWidth="400"
                            Margin="0,5,0,5"
                            mah:TextBoxHelper.Watermark="Watermark"
                            Text="{Binding LocalPath1}" />
                    </StackPanel>
                </Grid>
                <Rectangle
                    Grid.Row="1"
                    Height="2"
                    Margin="0,5,0,5"
                    Fill="White" />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource AccentColorBrush}"
                                Text="Name Front" />
                            <TextBox
                                MinWidth="200"
                                Margin="5"
                                mah:TextBoxHelper.Watermark="Watermark"
                                Text="{Binding LocalPath1}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource AccentColorBrush}"
                                Text="Name Back " />
                            <TextBox
                                MinWidth="200"
                                Margin="5"
                                mah:TextBoxHelper.Watermark="Watermark"
                                Text="{Binding LocalPath1}" />
                        </StackPanel>
                    </StackPanel>
                    <Rectangle
                        Grid.Column="1"
                        Width="2"
                        Fill="White" />
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <StackPanel
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource AccentColorBrush}"
                                Text="Number Front" />
                            <TextBox
                                Width="200"
                                Margin="5"
                                mah:TextBoxHelper.Watermark="Watermark"
                                Text="{Binding LocalPath2}" />
                        </StackPanel>
                        <StackPanel
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource AccentColorBrush}"
                                Text="Number Back " />
                            <TextBox
                                Width="200"
                                Margin="5"
                                mah:TextBoxHelper.Watermark="Watermark"
                                Text="{Binding LocalPath2}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Expander>
        <Expander
            Grid.Row="2"
            Margin="5"
            mah:ControlsHelper.HeaderFontSize="20"
            BorderBrush="{DynamicResource AccentColorBrush}"
            Header="Log"
            IsExpanded="True">
            <ScrollViewer>
                <TextBlock Text="{Binding LogText}" />
            </ScrollViewer>
        </Expander>
    </Grid>
</UserControl>
